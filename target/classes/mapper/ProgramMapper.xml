<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.itwillbs.mapper.ProgramMapper">

	<insert id="insertBoard">
		insert into program(num,name,subject,content,readcount,date,startDate,endDate,file)
		values(#{num},#{name},#{subject},#{content},#{readcount},#{date},#{startDate},#{endDate},#{file})
	</insert>
	
	<select id="getBoardList" resultType="com.itwillbs.domain.BoardDTO">
		select * from program 
		order by num desc 
		limit #{startRow},#{pageSize}
	
	
	</select>
	
	<select id="getBoardCount" resultType="java.lang.Integer">
		select count(*) from program 
</select>	
	
	
	
	
</mapper>